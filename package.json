{
  "name": "detentiondesk-server",
  "version": "1.0.0",
  "main": "server/server.js",
  "type": "commonjs",
  "scripts": {
    "server": "nodemon server/server.js",
    "client": "npm run dev --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "start": "node server/server.js",
    "test": "jest --config jest.config.js",
    "test:server": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "seed:demo": "node server/scripts/seedDemo.js",
    "seed:categories": "node server/scripts/seedCategories.js",
    "seed:demo:api": "node server/scripts/seedDemoApi.js",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test:server && npm run test:e2e"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.6.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "concurrently": "^9.0.1",
    "cross-env": "^10.1.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.2.0",
    "nodemon": "^3.1.4",
    "supertest": "^7.0.0",
    "wait-on": "^9.0.4"
  }
}
